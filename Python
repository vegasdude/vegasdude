Yaml


version: 2.1

jobs:
 build:
  docker:
   - image: cimg/python:3.11
  steps:
   - checkout
   - run:
      name: Install dependencies 
      command:|
       python -m venv venv
       . venv/bin/activate 
       pip install -r requirements.txt
   - run:
      name: Run tests
      command:|
       . venv/bin/activate
       pytest
workflows:
 build_and_test:
  jobs:
    - build